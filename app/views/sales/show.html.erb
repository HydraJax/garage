<div>
  <% @sale.items.each do |item| %>
  	<% if item && item.transaction_id == nil %> <!-- does not list items that have been sold -->
    	<li><%= link_to item.name, "/sales/#{@sale.id}/items/#{item.id}" %> $<%= item.price %></li>
  	<% end %>
  <% end %>

  <%= @sale.date %>  <%= @sale.title %>  <%= @sale.city %>  <%= @sale.zipcode %>  <%= @sale.description %>  <%= @sale.time_start %>  <%= @sale.time_end %>  <%= @sale.user.email unless @sale.user.blank? %> <%# =image_tag sale.photo_file_name.url(:thumb) %>

  <%= image_tag @sale.photo.url(:medium) %><br>
 </div>